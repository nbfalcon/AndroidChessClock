<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:hint="Label..."
        app:layout_constraintBottom_toBottomOf="@+id/deleteRow"
        app:layout_constraintEnd_toStartOf="@+id/deleteRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/deleteRow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="@+id/editRow"
        app:layout_constraintTop_toTopOf="@+id/editRow"
        android:background="@null"
        app:srcCompat="@drawable/ic_material_add" />

    <ImageButton
        android:id="@+id/editRow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/ic_material_add" />
</androidx.constraintlayout.widget.ConstraintLayout>